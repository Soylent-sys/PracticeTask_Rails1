<%= form_with model: @schedule do |f| %>
  <div class="schedule-form">
    <div class="text-form">
      <%= f.label :title ,"タイトル" %>
      <%= f.text_field :title, class: "field-title" %>
    </div>
    <div class="start-end-date-input">
      <div class="text-form">
        <%= f.label :start_date ,"開始日" %>
        <%= f.date_field :start_date, class: "field-date" %>
      </div>
      <div class="text-form">
        <%= f.label :end_date ,"終了日" %>
        <%= f.date_field :end_date, class: "field-date" %>
      </div>
    </div>
    <div>
      <%= f.check_box :all_day, class: "check-box" %>
      <%= f.label :all_day ,"終日の場合はチェックしてください" %>
    </div>
    <div class="text-form">
      <%= f.label :memo ,"スケジュールメモ" %>
      <%= f.text_area :memo, class: "field-memo" %>
    </div>

    <div class="form-submit_and_cancel">
      <%= link_to "キャンセル", schedules_path, class: "cancel-button" %>
      <%= f.submit "保存", class: "add-button" %>
    </div>
  </div>
<% end %>
